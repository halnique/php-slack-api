{
    "name": "halnique/php-slack-api",
    "description": "Simple PHP wrapper interfaces for Slack APIs.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "halnique",
            "email": "shunsuke4dev@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "guzzlehttp/guzzle": "^6.3",
        "psr/log": "^1.1",
        "vlucas/phpdotenv": "^3.3 || ^4.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpunit/php-invoker": "^2.0",
        "fzaninotto/faker": "^1.8",
        "halnique/php-string": "^1.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Halnique\\Slack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HalniqueTest\\Slack\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        }
    }
}
